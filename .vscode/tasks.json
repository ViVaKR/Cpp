{
	"version": "2.0.0",
    "runner": "terminal",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
	"tasks": [
        {
            "type": "cppbuild",
            "label": "Build Viv GCC",
            "command": "/usr/local/bin/g++-12",
            "args": [
                "-g",
                "-std=c++23",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/local/bin/g++-12"
        }
    ]
}
